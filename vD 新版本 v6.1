      return RGB_PURPLE;
    default:
      if (currentState == STATE_RISING) return RGB_GREEN;
      if (currentState == STATE_FALLING) return RGB_YELLOW;
      return wheelDown ? RGB_YELLOW : RGB_GREEN;
  }
}

