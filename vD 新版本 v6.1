    pwmSpeedDown = constrain(pwmSpeedDown, 50, 220);
  }
}

// ============================================================================
// 電流讀取
// ============================================================================
void readMotorCurrent() {
  if(IGNORE_CURRENT_SENSOR) {
    current_A = 0.0;
  } else {
    float tempCurrent = ina226.getCurrent_A();
    if(isnan(tempCurrent) || tempCurrent < -1.0 || tempCurrent > 10.0) {
      current_A = 0.0;
    } else {
      current_A = abs(tempCurrent);
    }
  }
}

// ============================================================================
// 優先權決策
// ============================================================================
void decidePriority() {
  if (emergencyStopPressed ||
      (!IGNORE_CURRENT_SENSOR && current_A > MAX_CURRENT_A) ||
      (abs(compAngleX) > EMERGENCY_ANGLE)) {
    currentPriority = PRIORITY_EMERGENCY;
    return;
  }

  if (tiltWarning) {
    currentPriority = PRIORITY_SAFETY_DOWN;
    return;
  }
  
  if (!wheelDown && 
      currentSpeed < SPEED_DOWN_THRESHOLD && 
      speedLowCount >= SPEED_STABLE_COUNT) {
    currentPriority = PRIORITY_SAFETY_DOWN;
    return;
  }

  if (currentState == STATE_COOLING) {
    currentPriority = PRIORITY_COOLING;
    return;
  }

  if (manualMode) {
    currentPriority = PRIORITY_MANUAL;
    return;
  }

  currentPriority = PRIORITY_AUTO;
}

// ============================================================================
// 根據優先權執行動作
// ============================================================================
void executeByPriority() {
  switch(currentPriority) {
    
    case PRIORITY_EMERGENCY:
      wheelDown = true;
      manualMode = false;
      ctrlSrc = 0;
      
      if(currentState != STATE_COOLING && currentState != STATE_EMERGENCY_STOP) {
        previousState = currentState;
        currentState = STATE_EMERGENCY_STOP;
        haltTime = millis();
        beepStart(NOTE_C6, 300);
        Serial.println(F("!!! 緊急停止觸發 !!!"));
      }
      break;
      
    case PRIORITY_SAFETY_DOWN:
      wheelDown = true;
      manualMode = false;
      ctrlSrc = 4;
      break;
      
    case PRIORITY_COOLING:
      wheelDown = true;
      manualMode = false;
      ctrlSrc = 0;
      break;
      
    case PRIORITY_MANUAL:
      ctrlSrc = 2;
      break;
      
    case PRIORITY_AUTO:
      if(currentSpeed >= SPEED_UP_THRESHOLD && speedHighCount >= SPEED_STABLE_COUNT) {
        if(wheelDown) {
          wheelDown = false;
          ctrlSrc = 3;
          Serial.println(F("自動: 上升 (速度 >= 20km/h)"));
        }
      } 
      else if(currentSpeed < SPEED_DOWN_THRESHOLD && speedLowCount >= SPEED_STABLE_COUNT) {
        if(!wheelDown) {
          wheelDown = true;
          ctrlSrc = 3;
          Serial.println(F("自動: 下降 (速度 < 15km/h)"));
        }
      }
      break;
  }
}

// ============================================================================
// 【關鍵改進】狀態機核心邏輯 - 簡化且安全
// ============================================================================
void handleStateMachine() {
  // 【最高優先權】每次進入狀態機先檢查硬體限位
  checkHardwareLimits();
  
  switch (currentState) {
    
    case STATE_INIT:
      if (!bothAtBottom) {
        moveDown();  // 使用統一控制函式
        
        if (syncTimeout == 0) {
          syncTimeout = millis();
          Serial.println(F("[INIT] 兩個致動器下降至初始位置..."));
        }
        
        if (millis() - syncTimeout > SYNC_TIMEOUT_MS) {
          Serial.println(F("[INIT] 警告: 同步超時!"));
        }
      } else {
        stopAllPWM();
        syncTimeout = 0;
        currentState = STATE_STANDBY;
        Serial.println(F("[INIT] 初始化完成,進入待機"));
        beepStart(NOTE_E5, 100);
      }
      break;
    
    case STATE_STANDBY:
      stopAllPWM();
      
      if (currentPriority == PRIORITY_EMERGENCY) {
        currentState = STATE_EMERGENCY_STOP;
        break;
      }
      
      if (!wheelDown && currentSpeed >= SPEED_UP_THRESHOLD && currentSpeed >= SPEED_MIN_SAFE) {
        currentState = STATE_RISING;
        syncTimeout = millis();
        Serial.println(F("[STANDBY] 開始上升"));
        break;
      }
      
      if (wheelDown && irCommandReceived) {
        Serial.println(F("[STANDBY] 已在底部"));
        irCommandReceived = false;
      }
      break;
    
    case STATE_RISING:
      if (currentPriority == PRIORITY_EMERGENCY) {
        stopAllPWM();
        currentState = STATE_EMERGENCY_STOP;
        break;
      }
      
      if (currentSpeed < SPEED_MIN_SAFE || wheelDown || irCommandReceived) {
        stopAllPWM();
        currentState = STATE_FALLING;
        syncTimeout = millis();
        Serial.println(F("[RISING] 開始下降"));
        irCommandReceived = false;
        break;
      }
      
      if (bothAtTop) {
        stopAllPWM();
        syncTimeout = 0;
        currentState = STATE_UP;
        Serial.println(F("[RISING] 已到達頂部"));
        beepStart(NOTE_G5, 100);
      } else {
        moveUp();  // 使用統一控制函式,內部會再次檢查限位
        
        if (millis() - syncTimeout > SYNC_TIMEOUT_MS) {
          Serial.println(F("[RISING] 警告: 同步超時!"));
        }
      }
      break;
    
    case STATE_UP:
      stopAllPWM();
      
      if (currentPriority == PRIORITY_EMERGENCY) {
        currentState = STATE_EMERGENCY_STOP;
        break;
      }
      
      if (currentSpeed < SPEED_MIN_SAFE || wheelDown || irCommandReceived) {
        currentState = STATE_FALLING;
        syncTimeout = millis();
        Serial.println(F("[UP] 開始下降"));
        irCommandReceived = false;
        break;
      }
      break;
    
    case STATE_FALLING:
      if (currentPriority == PRIORITY_EMERGENCY) {
        stopAllPWM();
        currentState = STATE_EMERGENCY_STOP;
        break;
      }
      
      if (bothAtBottom) {
        stopAllPWM();
        syncTimeout = 0;
        currentState = STATE_STANDBY;
        Serial.println(F("[FALLING] 已到達底部"));
        beepStart(NOTE_C5, 100);
      } else {
        moveDown();  // 使用統一控制函式,內部會再次檢查限位
        
        if (syncTimeout == 0) {
          syncTimeout = millis();
        }
        if (millis() - syncTimeout > SYNC_TIMEOUT_MS) {
          Serial.println(F("[FALLING] 警告: 同步超時!"));
        }
      }
      break;
    
    case STATE_EMERGENCY_STOP:
      stopAllPWM();
      
      if (!emergencyStopPressed && current_A < MAX_CURRENT_A * 0.8 && abs(compAngleX) < SAFE_ANGLE) {
        if (digitalRead(RESET_BUTTON_PIN) == LOW) {
          delay(50);
          if (digitalRead(RESET_BUTTON_PIN) == LOW) {
            Serial.println(F("[EMERGENCY] 手動重置"));
            currentState = STATE_INIT;
            syncTimeout = 0;
            beepStart(NOTE_C5, 100);
            delay(100);
            beepStart(NOTE_E5, 100);
          }
        }
      }
      break;
    
    case STATE_OVERCURRENT:
      stopAllPWM();
      
      if (current_A < MAX_CURRENT_A * 0.8) {
        Serial.println(F("[OVERCURRENT] 電流恢復"));
        currentState = previousState;
        delay(500);
      }
      break;
      
    case STATE_COOLING:
      stopAllPWM();
      
      if (digitalRead(RESET_BUTTON_PIN) == LOW) {
        delay(50);
        if (digitalRead(RESET_BUTTON_PIN) == LOW) {
          manualResetConfirmed = true;
          currentState = STATE_INIT;
          Serial.println(F("[COOLING] 手動重置確認"));
          beepStart(NOTE_C6, 200);
        }
      }
      break;
  }
}

