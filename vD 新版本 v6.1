    case PRIORITY_COOLING: display.print(F("COL")); break;
    case PRIORITY_MANUAL: display.print(F("MAN")); break;
    case PRIORITY_AUTO: display.print(F("AUT")); break;
  }

  display.setCursor(65, 10);
  display.print(F("S:"));
  switch(currentState) {
    case STATE_INIT: display.print(F("INIT")); break;
    case STATE_STANDBY: display.print(F("STBY")); break;
    case STATE_RISING: display.print(F("^UP^")); break;
    case STATE_UP: display.print(F("TOP")); break;
    case STATE_FALLING: display.print(F("vDNv")); break;
    case STATE_EMERGENCY_STOP: display.print(F("EMRG")); break;
    case STATE_OVERCURRENT: display.print(F("OCUR")); break;
    case STATE_COOLING: display.print(F("COOL")); break;
  }

  display.setCursor(65, 20);
  display.print(F("I:"));
  display.print(current_A, 1);
  display.print(F("A"));

  display.setCursor(65, 30);
  display.print(F("PWM:"));
  display.print(pwmSpeedUp);

  display.setCursor(0, 56);
  display.print(actuator1.upLimitPressed ? F("LU") : F("--"));
  display.print(F(" "));
  display.print(actuator1.downLimitPressed ? F("LD") : F("--"));
  display.print(F(" "));
  display.print(actuator2.upLimitPressed ? F("RU") : F("--"));
  display.print(F(" "));
  display.print(actuator2.downLimitPressed ? F("RD") : F("--"));

  display.setCursor(65, 45);
  if(tiltWarning) display.print(F("TILT!"));
  else if(manualMode) display.print(F("MAN"));
  else if(!i2cHealthy) display.print(F("I2C!"));
  else display.print(F("OK"));

  display.display();
}

